light1 {
	sceneLight {
		material "deferred/lightDirectional"
		orientation "0.5 0.5 0"
		diffuse "0.3 0.0 0.0 1.0"
		specular "0.4 0.0 0.0 1.0"
	}
}

maincam {
	sceneCamera {
		origin "0 2 2"
		orientation "0 0 1"
		range "500"
	}

	sound {
		local {
			randomize {
				delay "direct"
				"sounds/sound1"
			}
		}
	}
}

