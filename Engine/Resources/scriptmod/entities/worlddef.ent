
world {
	sceneNode {
		origin "1 2 3" 
	}
	
	worldInfo {
		ambientLight "1 1 1"
		playerController player:controller
		gravity "0 0 0"
	}
}

box1 {
	sceneNode {
		//parent world:sceneNode
		origin "0 0 10"
		
		model "gen:cube width 3.0 height 1.0 depth 1.0 texwidth 3"
	}
}

player {
	sceneNode origin {
		origin "0 0 0"
	}
	
	sceneNode head_cam_joint {
		origin "0 0.7 0"
		
		link origin
	}
	
	sceneCamera head_cam {
		range "1300"
		fov 60
		
		link head_cam_joint
	}
			
	sceneNode tjaffs {
		//parent world:sceneNode
		origin "0 0 -2"
		
		model "gen:cube width 0.1 height 0.2 depth 1.0"
		parent head_cam_joint
		// TODO: default player controller, just position the camera infront of 0,0,0
	}
	
	controller {
		type firstperson

		camera head_cam			// bind camera, should be updated by view
		view head_cam_joint		// node to control viewing direction
		control origin
	}
}

