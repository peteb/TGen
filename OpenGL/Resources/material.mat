
// some parameters...
params cool {
	niceParam 1 5 3
	matAuthor "peter" "Peter Backman"  123123
} 

// here's the material
material cool default 0 {
	lod 0 {	
		pass fixed {			
			front fill
			back fill
			
			//depthPass lequal
			
			texunit 0 metalbridge06_pent.jpg {
				sampler tex
				texCoordGen base base
				translate 0.5 0.5
				stretch wave sine 1 0.1 0 0.7
			}
		}
		
		pass fixed {
			front fill
			back fill
			blendFunc additive
			depthPass lequal
			color wave sawtooth 0.5 0.5 0 0.7
			
			texunit 0 pent_glow.jpg {
				sampler environment
			}
		}
		
	}
}	

